Compose {
  border: 1px solid gainsboro
  background: white
  textarea {
    [disabled] {
      color: #aaa
      background: #ebf7ee
    }
  }
  section.actions {
    background: #fafafa
    padding: .4rem
    button {
      -private {
        color: #8a6610
        background: #f3e7ac
        border-color: #f3e7ac
        :hover {
          color: white
          background-color: #8a6610
          border-color: #8a6610
        }
      }
    }
    input[type="file"] {
      padding: .5rem 0
      width: 95px
      height: 29px
      :hover {
        ::before {
          color: black
          border-color: #8b8b8b
        }
      }
      ::before {
        color: #5f5f5f
        padding: 3px 6px
        background: white
        border: 2px solid #ddd
        border-radius: 4px
        padding-top: .3rem
        content: 'ðŸ“Ž Attach File'
      }
    }
  }
  -expanded {
    textarea {
      border-bottom: 1px solid gainsboro
    }
  }
}
